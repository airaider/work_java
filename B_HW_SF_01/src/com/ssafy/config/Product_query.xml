<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
	
<mapper namespace="product" >
   <insert id="insert"		parameterType="product">
   		insert into product (id, name, price, description)
   		values ( #{id:VARCHAR}
   		        ,#{name:VARCHAR}
   		        ,#{price:INTEGER}
   		        ,#{description:VARCHAR})
   </insert>
   <delete id="delete" 		parameterType="string">
   		delete from product where id=#{id}
   </delete>
   <update id="update"		parameterType="product">
   		update product set name = #{name:VARCHAR}
   		                , price= #{price:INTEGER}
   		                , description=#{description:VARCHAR}
   		where  id = #{id:VARCHAR}
   </update>
   
   <select id="search"		 parameterType="string"    resultType="product">
   		select * from product  where id=#{id}
   </select>
   
   <select id="searchAll"	parameterType="pagebean"	resultType="product">
   		select * from product 
   		<where>
   			<if test='key != null and key!="all"'>
   				<if test=" word != null">
   					<choose>
   						<when test="key == 'id'">
   							id = #{word}
   						</when>
   						<when test="key == 'name'">
   							name like  concat('%',#{word},'%')
   						</when>
   						<when test="key == 'description'">
   							description like  concat('%',#{word},'%')
   						</when>
   					</choose>
   				</if>
   			</if>
   		</where>
   		order by id 
   </select>
   <select id="count"	resultType="int"	parameterType="pagebean">
   		select count(*) as cnt from product
   		<where>
   			<if test='key != null and key!="all"'>
   				<if test=" word != null">
   					<choose>
   						<when test="key == 'id'">
   							id = #{word}
   						</when>
   						<when test="key == 'name'">
   							name like  concat('%',#{word},'%')
   						</when>
   						<when test="key == 'description'">
   							description like  concat('%',#{word},'%')
   						</when>
   					</choose>
   				</if>
   			</if>
   		</where>
   </select>
</mapper>



























	












